<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">

<Dialog title="Edit Purchase Order" id="EditDialog">
    <f:SimpleForm>
        <f:content>

            <Label text="Company Code"/>
            <Input value="{editModel>/Bukrs}"  editable="true"/>

            <Label text="Document Category"/>
            <Input value="{editModel>/Bstyp}"  editable="true"/>

            <Label text="Document Type"/>
            <Input value="{editModel>/Bsart}"  editable="true"/>

            <Label text="Status of Purchasing"/>
            <Input value="{editModel>/Statu}" id="idEditStatu" editable="true"/>
        </f:content>
    </f:SimpleForm>

    <beginButton>
        <Button text="Save" press="onSave"/>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="onCancel"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>
